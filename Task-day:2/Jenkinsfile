pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                git branch: 'main', url: 'https://github.com/Satishganiyada/simple-python-application'
                sh 'sudo docker build -t python:v1 .'
            }
        }

        stage('Deploy') {
            steps {
                // Run the container on port 5000
                sh 'sudo docker run -d --name python_app -p 5000:5000 python:v1'
            }
        }

        stage('Test') {
            steps {
                // Simple test to check if the app is responding
                sh 'sleep 5'  // give container some time to start
                sh 'curl -f http://localhost:5000 || (echo "App test failed" && exit 1)'
            }
        }
    }

    post {
        always {
            // Clean up container after pipeline finishes
            sh 'sudo docker rm -f python_app || true'
        }
    }
}
